{
  "STATUS": "inprogress, some weirdness with using single positions as sets",
  "meta": {
    "id": "royalcarpet",
    "name": "Royal carpet",
    "source": "http://www.di.fc.ul.pt/~jpn/gv/royalcarpet.htm",
    "tags": ["infiltrate","deploy","differentunits","jump"]
  },
  "graphics": {
    "tiles": {"base":"playercolour"}, "icons": {"kings":"kings","towers":"rooks","soldiers":"pawns"}
  },
  "board": {
    "height":10,"width":8,
    "terrain": {
      "base": {"1":[["rect","a1","h1"]],"2":[["rect","a10","h10"]]}
    },
  },
  "setup": {
    "kings": {"1":["a2","c2","f2","h2"], "2": ["a9","c9","f9","h9"] }
  },
  "startTurn": {
    "links": ["selectking","selectsoldier",["if",["morethan",4,["sizeof","mysoldiers"]],"selectdeploytarget"]]
  },
  "endGame": {
    "doublejump": {"condition":["same",2,["sizeof","mytowers"]]}
  },
  "marks": {
    "selectdeploytarget": {
      "from": ["subtract","nobase","units"],
      "link": "deploy"
    },
    "selectking": {
      "from": "mykings",
      "runGenerator": "findjumptargets",
      "link": "selectjumptarget"
    },
    "selectsoldier": {
      "from": "mysoldiers",
      "runGenerator": "findmovetargets",
      "link": "selectmovetarget"
    },
    "selectjumptarget": {
      "from": "jumptargets",
      "runGenerator": "findsplashed",
      "link": "jump"
    },
    "selectmovetarget": {
      "from": "movetargets",
      "link": "move"
    }
  },
  "commands": {
    "deploy": {
      "applyEffect": ["spawn","selectdeploytarget","soldiers"],
      "link": "endturn"
    },
    "move": {
      "applyEffect": ["moveat","selectsoldier","selectmovetarget"],
      "link": "endturn"
    },
    "jump": {
      "applyEffects": [
        ["killat",["onlyin","splashed"]],
        ["if",
          ["overlaps",["single","selectjumptarget"],"oppbase"],
          ["setunitdata",["idofunitat",["firstposin",["firstposin",["union",["contextpos","jumpspot"],"selectking"]]]],"group","towers"]
        ],
        ["move",["firstposin",["union",["contextpos","jumpspot"],"selectking"]],"selectjumptarget"],
        ["setcontextval","jumpspot",["markpos","selectjumptarget"]]
      ],
      "runGenerators": ["findjumptargets"],
      "allow": [["ifelse",["isempty","jumptargets"],"endturn","selectjumptarget"]]
    }
  },
  "generators": {
    "findmovetargets": {
      "type": "nextto",
      "starts": "selectsoldier",
      "condition": ["noneat",["union","base","units"],["contextpos","target"]],
      "draw": {
        "target": {
          "tolayer": "movetargets"
        }
      }
    },
    "findjumptargets": {
      "type": "walker",
      "starts": ["union","selectking",["contextpos","jumpspot"]],
      "steps": "myunits",
      "blocks": ["subtract","board","units"],
      "prioritizeblocksoversteps": true,
      "max": 2,
      "draw": {
        "block": {
          "condition": ["same",["contextval","linelength"],1],
          "tolayer": "jumptargets",
          "include": {"dir":["contextval","dir"]}
        }
      }
    },
    "findsplashed": {
      "type": "nextto",
      "starts": "selectjumptarget",
      "dirs": ["relativedir",5,["lookup","jumptargets","selectjumptarget","dir"]],
      "draw": {
        "target": {
          "tolayer": "splashed"
        }
      }
    }
  }
}