{
  "STATUS": "not just 2 units, how to handle?",
  "meta": {
    "id": "bollsgame",
    "name": "Boll's game",
    "source": "http://www.di.fc.ul.pt/~jpn/gv/bollsgame.htm",
    "tags": ["commonunits","changeowners","eradicate"]
  },
  "graphics": {
    "icons": {"soldiers":"rooks"}
  },
  "board": { "height": 5, "width": 5 },
  "setup": { "soldiers": {"1": [["rect","a5","e5"]], "2":[["rect","a1","e1"]]}},
  "startTurn": {
    "link": "selectunit"
  },
  "endGame": {
    "selferadicate": { "condition": ["isempty","myunits"], "who": ["nextplayer"] },
    "opperadicate": { "condition": ["isempty","oppunits"] }
  },
  "marks": {
    "selectunit": {
      "from": ["union","mysoldiers","neutralsoldiers"],
      "runGenerator": "findmovetargets",
      "link": "selectmovetarget"
    },
    "selectmovetarget": {
      "from": "movetargets",
      "runGenerator": "findtransformations",
      "link": "move"
    }
  },
  "commands": {
    "move": {
      "applyEffects": [
        ["moveat","selectunit","selectmovetarget"],
        ["if",
          ["and",["anyat","myunits","selectunit"],["isempty","adjacentneutrals"],["notempty","adjacentopps"]],
          ["setin",
            ["union","adjacentopps","adjacentfriends",["single","selectunit"]],
            "owner",
            0
          ]
        ],
        ["if",
          ["and",["anyat","myunits","selectunit"],["isempty","adjacentopps"],["notempty","adjacentneutrals"]],
          ["setin",
            ["union","adjacentneutrals","adjacentfriends",["single","selectunit"]],
            "owner",
            ["playercase",2,1]
          ]
        ],
        ["if",
          ["and",["anyat","neutralunits","selectunit"],["isempty","adjacentfriends"],["notempty","adjacentopps"]],
          ["setin",
            ["union","adjacentopps","adjacentneutrals",["single","selectunit"]],
            "owner",
            ["playercase",1,2]
          ]
        ],
        ["if",
          ["and",["anyat","neutralunits","selectunit"],["isempty","adjacentopps"],["notempty","adjacentfriends"]],
          ["setin",
            ["union","adjacentneutrals","adjacentfriends",["single","selectunit"]],
            "owner",
            ["playercase",2,1]
          ]
        ]
      ],
      "link": "endturn"
    }
  },
  "generators": {
    "findmovetargets": {
      "type": "walker",
      "start": "selectunit",
      "dirs": [1,3,5,7],
      "blocks": "units",
      "draw": {
        "steps": {
          "tolayer": "movetargets"
        }
      }
    },
    "findadjacents": {
      "type": "neighbour",
      "start": "selectmovetarget",
      "dirs": [1,3,5,7],
      "condition": ["different",["start"],["pos","selectunit"]],
      "draw": {
        "neighbours": {
          "tolayer": ["ifelse",
            ["anyat","oppunits",["target"]],
            "adjacentopps",
            ["ifelse",
              ["anyat","myunits",["target"]],
              "adjacentfriends",
              "adjacentneutrals"
            ]
          ]
        }
      }
    }
  }
}
