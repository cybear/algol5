{
  "meta": {
    "id": "jostle",
    "name": "Jostle",
    "source": "http://www.marksteeregames.com/Jostle_Go_rules.pdf",
    "tags": [],
    "author": "Mark Steere",
    "year": 2010,
    "instructions": {
      "startTurn": "Select which unit to jostle!",
      "selectunit": ["concat",
        "This unit neighbours ",
        ["sizeof","initialfriend"],
        ["ifelse",["same",["sizeof","initialfriend"],1], " friend", " friends"],
        " and ",
        ["sizeof","initialenemy"],
        ["ifelse",["same",["sizeof","initialenemy"],1], " enemy", " enemies"],
        " making the square worth ",
        ["minus",["sizeof","initialfriend"],["sizeof","initialenemy"]],
        ". Select a higher value square to jostle to"
      ],
      "selectmovetarget": ["concat",
        "From ",
        ["pos","selectmovetarget"],
        " you would neighbour ",
        ["minus",["sizeof","newfriend"],1],
        ["ifelse",["same",["sizeof","newfriend"],2], " friend", " friends"],
        " and ",
        ["sizeof","newenemy"],
        ["ifelse",["same",["sizeof","newenemy"],2], " enemy", " enemies"],
        ", making it worth ",
        ["minus", ["minus",["sizeof","newfriend"],1], ["sizeof","newenemy"]],
        ". Press \"jostle\" to move from ",
        ["pos","selectunit"],
        " to ",
        ["pos","selectmovetarget"]
      ]
    }
  },
  "graphics": {
    "icons": { "checkers": "pawns" }
  },
  "board": { "height": 10, "width": 10 },
  "setup": {
    "checkers": {
      "1":["c4","c6","c8","d3","d5","d7","e4","e8","f3","f7","g4","g6","g8","h3","h5","h7"],
      "2":["c3","c5","c7","d4","d6","d8","e3","e7","f4","f8","g3","g5","g7","h4","h6","h8"]
    }
  },
  "startTurn": {
    "link": "selectunit"
  },
  "marks": {
    "selectunit": {
      "from": "mycheckers",
      "runGenerator": "findinitial",
      "link": "selectmovetarget"
    },
    "selectmovetarget": {
      "from": "movetargets",
      "runGenerator": "findnew",
      "link": ["if",["morethan",
        ["minus",["sizeof","newfriend"],["sum",1,["sizeof","newenemy"]]],
        ["minus",["sizeof","initialfriend"],["sizeof","initialenemy"]]
      ],"jostle"]
    }
  },
  "commands": {
    "jostle": {
      "applyEffect": ["moveat","selectunit","selectmovetarget"],
      "link": "endturn"
    }
  },
  "generators": {
    "findinitial": {
      "type": "neighbour",
      "dirs": [1,3,5,7],
      "start": "selectunit",
      "draw": {
        "neighbours": {
          "tolayer": ["ifelse",
            ["noneat","units",["target"]],
            "movetargets",
            ["ifelse",
              ["anyat","oppunits",["target"]],
              "initialenemy",
              "initialfriend"
            ]
          ]
        }
      }
    },
    "findnew": {
      "type": "neighbour",
      "dirs": [1,3,5,7],
      "start": "selectmovetarget",
      "ifover": "units",
      "draw": {
        "neighbours": {
          "tolayer": ["ifelse",
            ["anyat","oppunits",["target"]],
            "newenemy",
            "newfriend"
          ]
        }
      }
    }
  }
}